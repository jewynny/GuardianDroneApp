<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ================= HEADER BAR ================= -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDIAN"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRONE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"/>
    </LinearLayout>


    <!-- ================= SCROLLABLE CONTENT ================= -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Greeting -->
            <TextView
                android:id="@+id/reportGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Evening, we have your health report"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="italic"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>

            <!-- Gauge -->
            <ImageView
                android:id="@+id/healthGauge"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/gauge"
                android:adjustViewBounds="true"/>

            <!-- Title -->
            <TextView
                android:id="@+id/droneReportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drone 1 Status Report"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"/>

            <!-- Icon Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/droneBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="100%"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_battery"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:text="strong connection"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_signal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:text="shielded"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_shield"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <!-- Status Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Status: ACTIVITY DETECTED\nCurrent Activity: SCANNING\nScanning Start: 8PM"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"/>

            <!-- Activities Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities Detected:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Activity Logs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:08pm – Suspicious Movement\n11:35pm – Bear Detected"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingTop="6dp"/>

            <TextView
                android:id="@+id/droneReportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drone 2 Status Report"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"/>

            <!-- Icon Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/droneBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="100%"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_battery"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:text="strong connection"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_signal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:text="shielded"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:src="@drawable/ic_shield"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <!-- Status Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Status: SAFE\nCurrent Activity: SCANNING\nScanning Start: 8PM"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"/>

            <!-- Activities Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities Detected:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Activity Logs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None Detected"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingTop="6dp"/>
        </LinearLayout>

    </ScrollView>


    <!-- ================= BOTTOM NAV BAR ================= -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navLogs"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_logs"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/navDrones"
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_drone"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/navMenu"
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_menu"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
